<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content custom-modal">
      <div class="modal-header custom-modal-header">
        <h5 class="modal-title" id="registerModalLabel">Crear cuenta</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>
      <div class="modal-body">
        <form id="formRegistro">
          <div class="mb-3">
            <label for="registroNombre" class="form-label">Nombre y Apellido</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
              <input type="text" class="form-control" id="registroNombre" required>
            </div>
          </div>
          <div class="mb-3">
            <label for="registroCorreo" class="form-label">Correo electrónico</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-envelope"></i></span>
              <input type="email" class="form-control" id="registroCorreo" required>
            </div>
          </div>
          <div class="mb-3">
            <label for="registroPassword" class="form-label">Contraseña</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-lock"></i></span>
              <input type="password" class="form-control" id="registroPassword" minlength="6" required>
            </div>
          </div>
          <div class="mb-3">
            <label for="registroConfirmarPassword" class="form-label">Confirmar contraseña</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-lock"></i></span>
              <input type="password" class="form-control" id="registroConfirmarPassword" minlength="6" required>
            </div>
          </div>
          <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="terminos" required>
            <label class="form-check-label" for="terminos">
              Acepto los <a href="#">términos y condiciones</a>
            </label>
          </div>
          <div id="registroMensajeError" class="alert alert-danger d-none text-center" role="alert"></div>
          <button type="submit" class="btn btn-primary w-100">Registrarse</button>
        </form>
        <div class="text-center mt-4">
          <p class="mb-2">También puedes registrarte con</p>
          <div class="d-flex justify-content-center gap-3">
            <a href="#" class="btn btn-outline-danger rounded-circle" title="Google"><i class="fab fa-google"></i></a>
            <a href="#" class="btn btn-outline-primary rounded-circle" title="Facebook"><i
                class="fab fa-facebook-f"></i></a>
            <a href="#" class="btn btn-outline-info rounded-circle" title="LinkedIn"><i
                class="fab fa-linkedin-in"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

