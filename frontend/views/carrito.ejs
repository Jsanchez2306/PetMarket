<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Carrito de compras - PetMarket" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="stylesheet" href="/css/assets.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/buttons.css" />
    <link rel="icon" href="/Imagenes/HuellaPerro.png" />
    <title>Carrito de Compras - PetMarket</title>
    <link rel="stylesheet" href="/css/carrito.css">
  </head>

  <body>
    <%- include('partials/headerUnificado') %>

    <main class="cart-container">
      <div class="container my-5">
        <!-- Header del carrito -->
        <div class="row mb-4">
          <div class="col-12">
            <h1 class="display-4 mb-3">
              <i class="fas fa-shopping-cart me-3"></i>
              Mi Carrito
            </h1>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                <li class="breadcrumb-item">
                  <a href="/productos/catalogo">Catálogo</a>
                </li>
                <li class="breadcrumb-item active">Carrito</li>
              </ol>
            </nav>
          </div>
        </div>

        <!-- Contenido del carrito -->
        <div class="row" id="cartContent">
          <!-- Items del carrito -->
          <div class="col-lg-8">
            <div id="cartItems">
              <!-- Renderizar items del servidor -->
              <% if (cart.items && cart.items.length > 0) { %>
                <% cart.items.forEach(item => { %>
              <div class="cart-item" data-product-id="<%= item.product._id %>">
                <div class="row align-items-center">
                  <div class="col-md-3">
                    <img
                      src="<%= item.product.imagen || '/Imagenes/default-product.jpg' %>"
                      alt="<%= item.product.nombre %>"
                      class="product-image img-fluid"
                    />
                  </div>
                  <div class="col-md-4">
                    <h5 class="mb-1"><%= item.product.nombre %></h5>
                    <p class="text-muted mb-0">
                      <small
                        >SKU: <%= item.product._id.toString().slice(-6)
                        %></small
                      >
                    </p>
                    <p class="text-muted mb-0">
                      <small>Stock disponible: <%= item.product.stock %></small>
                    </p>
                  </div>
                  <div class="col-md-2">
                    <p class="fw-bold mb-0">
                      $<%= item.price.toLocaleString() %>
                    </p>
                  </div>
                  <div class="col-md-2">
                    <div class="quantity-controls">
                      <button
                        class="quantity-btn"
                        onclick="cambiarCantidad('<%= item.product._id %>', '<%= item.quantity - 1 %>')"
                      >
                        <i class="fas fa-minus"></i>
                      </button>
                      <span class="quantity-display"><%= item.quantity %></span>
                      <button
                        class="quantity-btn"
                        onclick="cambiarCantidad('<%= item.product._id %>', '<%= item.quantity + 1 %>')"
                      >
                        <i class="fas fa-plus"></i>
                      </button>
                    </div>
                  </div>
                  <div class="col-md-1">
                    <button
                      class="btn btn-outline-danger btn-sm"
                      onclick="eliminarItem('<%= item.product._id %>')"
                    >
                      <i class="fas fa-trash"></i>
                    </button>
                  </div>
                </div>
              </div>
                <% }); %>
              <% } else { %>
              <div id="emptyCart" class="text-center py-5">
                <i class="fas fa-shopping-cart fa-5x text-muted mb-3"></i>
                <h3 class="text-muted">Tu carrito está vacío</h3>
                <p class="text-muted">Agrega algunos productos para comenzar</p>
                <a href="/productos/catalogo" class="btn btn-primary">
                  <i class="fas fa-shopping-bag me-2"></i>
                  Ir de compras
                </a>
              </div>
              <% } %>
            </div>
          </div>

          <!-- Resumen del carrito -->
          <div class="col-lg-4">
            <div class="cart-summary">
              <h4 class="mb-4">
                <i class="fas fa-receipt me-2"></i>
                Resumen del pedido
              </h4>

              <div class="summary-row">
                <span>Subtotal:</span>
                <span id="subtotalAmount"
                  >$<%= (cart.subtotal || 0).toLocaleString() %></span
                >
              </div>

              <div class="summary-row">
                <span>IVA (19%):</span>
                <span id="ivaAmount"
                  >$<%= (cart.iva || 0).toLocaleString() %></span
                >
              </div>

              <div class="summary-row">
                <span>Total:</span>
                <span id="totalAmount"
                  >$<%= (cart.total || 0).toLocaleString() %></span
                >
              </div>

              <hr class="my-4" />

              <div class="d-grid gap-2">
                <button
                  class="btn btn-pagar"
                  id="pagarBtn"
                  <%= (cart.items && cart.items.length > 0) ? '' : 'disabled' %>
                >
                  <i class="fas fa-credit-card me-2"></i>
                  Proceder al pago
                </button>
                <button
                  class="btn btn-outline-secondary"
                  id="limpiarCarritoBtn"
                >
                  <i class="fas fa-trash me-2"></i>
                  Limpiar carrito
                </button>
                <a href="/productos/catalogo" class="btn btn-outline-primary">
                  <i class="fas fa-arrow-left me-2"></i>
                  Seguir comprando
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Carrito vacío -->
        <div class="empty-cart d-none" id="emptyCart">
          <i class="fas fa-shopping-cart"></i>
          <h3>Tu carrito está vacío</h3>
          <p class="mb-4">¡Agrega algunos productos para comenzar a comprar!</p>
          <a href="/productos/catalogo" class="btn btn-primary btn-lg">
            <i class="fas fa-search me-2"></i>
            Explorar productos
          </a>
        </div>
      </div>
    </main>

    <!-- Loading overlay -->
    <div class="loading-overlay" id="loadingOverlay">
      <div class="loading-spinner">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-3 mb-0">Procesando...</p>
      </div>
    </div>

    <!-- <%- include('partials/footer') %> -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Header unificado maneja toda la autenticación -->
    <script src="/js/headerUnificado.js"></script>
    <script src="/js/carrito.js"></script>
  </body>
</html>
